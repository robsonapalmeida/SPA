<p id="notice"><%= notice %></p>

<h4>User X Services</h4>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Service</th>
      <th>Servicedate</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_x_services.each do |userservice| %>
      <tr>
        <td><%= userservice.name %></td>
        <td><%= userservice.email %></td>
        <td><%= userservice.service %></td>
        <td><%= userservice.servicedate %></td>
        <td><%= userservice.message %></td>
        <td><%= link_to 'Show', userservice %></td>
        <td><%= link_to 'Edit', edit_user_x_service_path(userservice)  %></td>
        <td><%= link_to 'Destroy', userservice, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

