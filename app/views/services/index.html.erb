<p id="notice"><%= notice %></p>

<h3>Tipos de Servicios</h3>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre del Servicio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.name %></td>
        <td><%= link_to 'Mostrar', service %></td>
        <td><%= link_to 'Modificar', edit_service_path(service) %></td>
        <td><%= link_to 'Apagar', service, method: :delete, data: { confirm: 'Tieses certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo tipo del Servicio', new_service_path, class:"btn btn-primary" %>
